CC  = gcc
CXX = g++

CFLAGS   = -g -Wall
CXXFLAGS = -g -Wall

.PHONY: default
default: preproc

.PHONY: all
all: clean preproc

.PHONY: clean
clean:
	rm -rf *.log *.o *~ a.out* core preprocessor *.pjo

.PHONY: preproc
# header dependency
preproc: preprocessor.c
	$(CC) -o preprocessor preprocessor.c

